@model Category
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-10 grid-margin stretch-card" style="position:absolute;right:0;top:120px">
        <div class="card">
            <div class="card-body col-12">
                <h4 class="card-title">Update Category</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label asp-for="CategoryName"></label>
                        <input asp-for="CategoryName" class="form-control" placeholder="CategoryName">
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IconClassName"></label>
                        <input asp-for="IconClassName" class="form-control" placeholder="IconClassName">
                        <span asp-validation-for="IconClassName" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success mr-2 form-control">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

