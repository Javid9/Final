@model IEnumerable<Header>
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-lg-10 grid-margin stretch-card"  style="position:absolute;right:0;top:120px">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Header Table</h4>
                    <a asp-action="Create" class="btn btn-success mt-3">Create new Header</a>
                    @if (Model.Count() != 0)
                    {
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Setting
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Header item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.Title
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                                    <i class="far fa-edit"></i>
                                                </a>
                                                <br /> <br />

                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        //<h4 class="card-title">Empty Table</h4>
                    }
                </div>
            </div>
        </div>
    </div>

