@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-lg-10 grid-margin stretch-card" style="position:absolute;right:0;top:120px">
        <div class="card">
            <a asp-action="Create" class="btn btn-success mr-2 create-book">Add Blog</a>
            <div class="card-body">
                <h4 class="card-title">Blog Table</h4>
                @if (Model.Count() != 0)
                {
            <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    CreateTime
                                </th>
                                <th>
                                    AuthorDesc
                                </th>
                                <th>
                                    Facebook
                                </th>

                                <th>
                                    Instagram
                                </th>
                                <th>
                                    Twitter
                                </th>
                                <th>
                                    Wahtsapp
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (Blog item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/images/blog/@item.Image" style="width:100px;height:100px" />
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Category.CategoryName
                                    </td>
                                    <td>
                                        @item.CreateTime
                                    </td>
                                    <td>
                                        @item.AuthorName
                                    </td>
                                    <td>
                                        @item.Facebook
                                    </td>
                                    <td>
                                        @item.Instagram
                                    </td>
                                    <td>
                                        @item.Twitter
                                    </td>
                                    <td>
                                        @item.Whatsapp
                                    </td>


                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="far fa-edit"></i>
                                        </a>
                                        <br /> <br />

                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <br /> <br />   
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
            </div>
                }
                else
                {
                    //<h4 class="card-title">Empty Table</h4>
                }
            </div>
        </div>
    </div>
</div>


