@model IEnumerable<CareerAdvice>
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-lg-10 grid-margin stretch-card" style="position:absolute;right:0;top:120px">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Career Advice Table</h4>
                    <a asp-action="Create" class="btn btn-success mt-3">Create</a>
                    @if (Model.Count() != 0)
                    {
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            CreateTime
                                        </th>
                                        <th>
                                            Setting
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (CareerAdvice item in Model)
                                    {
                                    <tr>
                                        <td>
                                            <img src="~/images/blog/@item.Image" style="width:100px;height:100px" />
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.Desc
                                        </td>
                                        <td>
                                            @item.CreateTime
                                        </td>
                                        <td>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                                <i class="far fa-edit"></i>
                                            </a>
                                            <br /> <br />

                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        //<h4 class="card-title">Empty Table</h4>
                    }
                </div>
            </div>
        </div>
    </div>

