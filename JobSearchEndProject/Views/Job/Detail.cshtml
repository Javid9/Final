@model Job
@{
    ViewData["Title"] = "Detail";
}

<section class="candidates-profile-bg">
    <div class="bg-overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="candidates-profile-details text-center">
                    <img src="~/images/@Model.Image" class="img-fluid d-block mx-auto rounded-circle img-thumbnail mb-4">
                    <h4 class="text-white candidates-profile-name mb-2">@Model.Title</h4>
                    <p class="text-white-50 mb-2"><i class="mdi mdi-bank mr-2"></i>@Model.Email</p>
                    <ul class="candidates-profile-icons list-inline mb-3">
                        <li class="list-inline-item text-white-50 pr-2 f-16">Category: @Model.Category.CategoryName</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end home -->
<!-- CANDIDATES PROFILE START -->

<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="text-dark">Description</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="job-detail mt-2 p-4">
                    <div class="job-detail-desc">
                        <p class="text-muted mb-0">@Model.Description</p>
                    </div>
                    <hr>
                    <ul class="list-inline mt-3 mb-0">
                        <li class="list-inline-item mr-3">
                            <a href="#" class="text-muted f-15 mb-0"><i class="far fa-user"></i>&nbsp; @Model.AppUser.UserName</a>
                        </li>

                        <li class="list-inline-item mr-3">
                            <a href="#" class="text-muted f-15 mb-0"><i class="fas fa-dollar-sign"></i>&nbsp; Min Salary: @Model.MinSalary</a>
                        </li>

                        <li class="list-inline-item mr-3">
                            <a href="#" class="text-muted f-15 mb-0"><i class="fas fa-dollar-sign"></i>&nbsp; max Salary: @Model.MinSalary</a>
                        </li>

                        <li class="list-inline-item mr-3">
                            <a href="#" class="text-muted f-15 mb-0"><i class="fas fa-child"></i>&nbsp; Experience: @Model.Experience</a>
                        </li>
                        <li class="list-inline-item mr-3">
                            <a href="#" class="text-muted f-15 mb-0"><i class="far fa-flag"></i>&nbsp; @Model.Country.CountryName</a>
                        </li>
                        <li class="list-inline-item mr-3">
                            <a href="#" class="text-muted f-15 mb-0"><i class="mdi mdi-cellphone-iphone mr-2"></i>@Model.Phone</a>
                        </li>
                        <li class="list-inline-item mr-3">
                            <a href="#" class="text-muted f-15 mb-0"><i class="mdi mdi-web mr-2"></i>@Model.Website</a>
                        </li>
                     
                    </ul>
                </div>
            </div>
        </div>

     
    </div>
</section>
<!-- CANDIDATES PROFILE END -->
