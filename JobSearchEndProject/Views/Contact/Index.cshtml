        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
     <script src="../..~/wwwroot/js/jquery.min.js"></script>

    <script>
        $(document).ready(function () {

            $("#sendBtn").click(function (e) {
                e.preventDefault();
                //if ($("#name").val() != "" && $("#subject").val() != "" && $("#email").val() != "" && $("#messageee").val()) {
                if ($("#name").val() == "" || $("#subject").val() == "" || $("#email").val() == "" || $("#messageee").val() == "" ) {

                    Swal.fire({
                        title: 'please fill out the following form!',
                        text: 'Do you want to continue',
                        icon: 'error',
                        confirmButtonText: 'Cool'
                    })
                    return false;
                }

                    let formData = new FormData();

                    formData.append("Name", $("#name").val());
                    formData.append("Subject", $("#subject").val());
                    formData.append("Email", $("#email").val());
                    formData.append("Message", $("#messageee").val());

                    axios.post('/Contact/Create', formData)
                        .then(function (response) {
                            Swal.fire({
                                position: 'top-end',
                                icon: 'success',
                                title: 'Your message has sended',
                                showConfirmButton: false,
                                timer: 2000
                            }).then(function (result) {
                                $("#name").val("");
                                $("#email").val("");
                                $("#messageee").val("");
                                $("#subject").val("");
                            })
                        })
                        .catch(function (error) {
                            console.log(error);
                        });

                //}
            });
        })





    </script>


}


